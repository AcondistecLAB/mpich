ALL: all-redirect
SHELL = @SHELL@
srcdir = @srcdir@
.SUFFIXES: .pdf .dvi .tex

@VPATH@

LATEX      = export TEXINPUTS=".:$(srcdir):$(srcdir)/../pmi:" ; latex
BIBTEX     = export BIBINPUTS=".:$(srcdir):$(srcdir)/../pmi:" ; bibtex
DVIPDFM    = export TEXINPUTS=".:$(srcdir):$(srcdir)/../pmi:" ; dvipdfm
LATEX2HTML = latex2html

smpd_pmi.dvi: smpd_pmi.tex smpd_tree.eps
	-$(LATEX) smpd_pmi.tex
	-$(LATEX) smpd_pmi.tex
	$(LATEX) smpd_pmi.tex

smpd_pmi.pdf: smpd_pmi.dvi
	$(DVIPDFM) smpd_pmi.dvi

all-redirect: smpd_pmi.pdf

clean:
	-rm -f *.toc *.out *.dvi user.ps user.pdf *.aux *.blg *.bbl *.log

mandoc:

htmldoc:

latexdoc: ALL
